extends matlayout

block content
    div(class="container containers")
        div(class="row")
          div(class="card")
            div(class="card-content")
              span(class="card-title") Calculate Perimeter of rectangle
              form(method="POST", action="/calculatePerimeter")
                  div(class="input-field ")
                      input(id="length" name="length" type="text" class="validate")
                      label(for="length") length
                  div(class="input-field ")
                      input(id="width" name="width" type="text" class="validate")
                      label(for="width") width
                  button(class="btn waves-effect waves-light" type="submit" name="action") Calculate
                      i(class="material-icons right") send
              div(class="container containers")
                h4 Result : #{perimeter}
