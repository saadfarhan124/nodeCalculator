extends matlayout

block content
    div(class="container containers")
        div(class="row")
            div(class="card")
                div(class="card-content")
                    span(class="card-title") Calculate Body Mass Index
                    form(action="/calculateBMI", method="post")
                        div(class="input-field ")
                            input(id="weightLB" name="weight" type="text" class="validate")
                            label(for="weightLB") Weight(lb)
                        div(class="input-field ")
                            input(id="heightIN" name="height" type="text" class="validate")
                            label(for="heightIN") Height(in)
                        button(class="btn waves-effect waves-light" type="submit" name="action") Calculate
                            i(class="material-icons right") send
                    div(class="container containers")
                        h4 Result : #{bmi}
                    h5 Body Mass Index Chart:
                    img(src="./images/bmiChart.png")
