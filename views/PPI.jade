extends matlayout

block content
  div(class="container containers")
    div(class="row")
      div(class="card")
        div(class="card-content")
          span(class="card-title") Calculate Pixel Per Inch
          form(action="/calculatorPPI", method="post")
            div(class="input-field")
              input(id="heightPX" type="text" class="validate" name="height")
              label(for="heightPX" ) Height(px)
            div(class="input-field")
              input(id="widthPX" name="width" type="text" class="validate")
              label(for="widthPX") Width(px)
            div(class="input-field")
              input(id="screensizeIN" type="text" class="validate" name="screensizeinches")
              label(for="screensizeIN" ) Diagonal Screen Size(in)
            button(class="btn waves-effect waves-light" type="submit" name="action") Calculate
              i(class="material-icons right") send
          div(class="container containers")
            h4 Result : #{ppi}
    